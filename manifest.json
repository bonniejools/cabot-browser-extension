{
  "manifest_version": 2,

  "name": "Cabot Services",
  "description": "Shows you the status of your cabot services",
  "version": "1.0",

  "browser_action": {
    "default_icon": "img/arachnys/icon_180.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],

  "browser_action": {
    "default_icon": "img/arachnys/icon_180.png",
    "default_popup": "popup.html",
    "default_title": "Cabot Services"
  },

  "icons": { "128": "img/arachnys/icon_128.png" },

  "options_page": "options/options.html"
}
